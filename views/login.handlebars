<div class=''>
  <div class='login-card'>
    <form class='form mx-auto login-form'>
      <h2 class='page-title centre'>Log In</h2>
      <div class='form-group m-3'>
        <label for='username-login'>Username:</label>
        <input class='form-control' type='text' id='username-login' placeholder='Enter username' />
      </div>
      <div class='form-group m-3'>
        <label for='password-login'>Password:</label>
        <input class='form-control' type='password' id='password-login' placeholder='Enter password' />
      </div>
      <div class='form-group m-3'>
        <button class='btn btn-primary form-control' type='submit'>Log in</button>
      </div>
      <div class='d-flex justify-content-center'>
        <p>Don't have an account?
          <a href='#' id='switch-to-reg'>Sign Up!</a>
        </p>
      </div>
    </form>
  </div>

  <div class='signup-card is-hidden'>
    <form class='form mx-auto signup-form'>
      <h2 class='page-title centre'>Sign Up</h2>
      <div class='form-group m-3'>
        <label for='username-signup'>Username:</label>
        <input class='form-control' type='text' id='username-signup' placeholder="Create a username" />
      </div>
      <div class='form-group m-3'>
        <label for='password-signup'>Password:</label>
        <input class='form-control' type='password' id='password-signup' placeholder="Create a password"/>
      </div>
      <div class='form-group m-3'>
        <button class='btn btn-primary form-control' type='submit'>Sign up</button>
      </div>
      <div class='d-flex justify-content-center'>
        <p>Already have an account?
          <a href='#' id='switch-to-log'>Login!</a>
        </p>
      </div>
    </form>
  </div>
</div>

<script src='./js/login.js'></script>