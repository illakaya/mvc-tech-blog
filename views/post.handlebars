<div class="card mb-3" id="post" data-postId="{{post.id}}">
  {{#with post}}
  {{> post-details}}
  {{/with}}
</div>

{{!-- for all the comments retrieved, each comment will be processed by the comment-details handlebars --}}
{{#each post.comments as |comment|}}
{{> comment-details}}
{{/each}}

<div class="card">
  <div class="card-header p-4"></div>
  <div class="card-body">
    <form class="comment-form" data-userId="{{userId}}">
      <label for="comment" class="form-label">Comment</label>
      <textarea class="form-control" rows="3" id="text-comment"></textarea>
      <div class="d-grid mt-3">
        <input type="submit" value="Submit" class="btn btn-secondary">
      </div>
    </form>
  </div>
</div>