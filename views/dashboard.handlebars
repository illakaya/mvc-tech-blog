<div class="d-flex justify-content-center">
  <a href="/create"><button class="btn btn-secondary mb-3">+ New Post</button></a>
</div>
{{!-- for all the posts retrieved, each post will be processed by the post-details handlebars --}}
{{#each posts as |post|}}
{{!-- to retrieve post link later --}}
<a href="/dashboard/post/{{id}}" class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center flex-container">
    <h3 class="flex-item">{{title}}</h3>
    <p class="flex-item my-0">Posted by {{user.username}} on {{format_date date}}</p>
  </div>
</a>
{{/each}}
